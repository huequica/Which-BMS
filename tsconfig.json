{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "./src",
    "lib": [
      "es2020",
      "DOM"
    ],

    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}
